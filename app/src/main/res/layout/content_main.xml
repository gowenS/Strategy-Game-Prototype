        <com.rustandtuna.gameprototype.gridButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/h4Button"
            android:longClickable="false"
            android:layout_margin="2dp"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top|start"
        android:gravity="top|start">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/player1TurnIndicator"
            android:background="@drawable/player_turn_off"
            android:layout_gravity="top|start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:id="@+id/textView"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top|start"
            android:gravity="top" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/p1t1HP"
            android:background="@drawable/t1empty"
            android:textStyle="bold"
            android:textColor="#dadff9"
            android:gravity="top"
            android:enabled="false"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="top|start" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/p1t2HP"
            android:background="@drawable/t2empty"
            android:gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#dadff9"
            android:textStyle="bold"
            android:layout_gravity="top|start"
            android:textSize="15dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/p1t3HP"
            android:textColor="#dadff9"
            android:textStyle="bold"
            android:layout_gravity="top|start"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/t3empty"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>


